@model _19010230_e_commerce_store.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>View Order</h1>


    <div>
        <h4>Product</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Name:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductName)
            </dd>
            <dt class="col-sm-2">
                Description:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductDescription)
            </dd>
            <dt class="col-sm-2">
                Price:
            </dt>
            <dd class="col-sm-10">
                R @Html.DisplayFor(model => model.ProductPrice)
            </dd>
            <dt class="col-sm-2">
                Showcase:
            </dt>
            <dd class="col-sm-10">
                <embed type="image/jpg" src="@Html.DisplayFor(model => model.ProductImage)" width="100" height="100" />
            </dd>
            <dt class="col-sm-2">
                Category:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.CategoryName)
            </dd>
        </dl>
    </div>

    <form asp-controller="Products" asp-action="Checkout">
        <input type="submit" value="Buy Now" />
    </form>



    <div>
        <a asp-action="Index">Back to products</a>
    </div>


<style>
    input[type=button], input[type=submit], input[type=reset] {
        background-color: #4CAF50;
        border: none;
        color: white;
        padding: 16px 32px;
        text-decoration: none;
        margin: 4px 2px;
        cursor: pointer;
    }
</style>